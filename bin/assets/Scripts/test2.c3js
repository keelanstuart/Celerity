var runtime;
var hscl;

function update(elapsed_seconds)
{
	runtime += elapsed_seconds * 4.0;
	var scl = GetPropertyValue(hscl);
	scl.x = 1.0 + Math.sin(runtime) * 0.25;
	scl.y = 1.0 + Math.cos(runtime) * 0.25;
	scl.z = 1.5 + Math.cos(runtime + 1.0) * 0.8;
	SetPropertyValue(hscl, scl);
}

function init()
{
	runtime = 0.0;

	hscl = FindProperty(self, "Scale");
}
